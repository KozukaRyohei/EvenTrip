<!-- app/views/users/edit.html.erb -->
<%= form_with(model: @user, url: user_path(@user)) do |f| %>
  <div class="field">
    <%= f.label :ユーザー名 %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :ユーザー画像 %>
    <%= f.file_field :user_image %>
  </div>

  <div class="field">
    <%= f.label :自己紹介 %>
    <%= f.text_area :introduction %>
  </div>

  <%= f.submit "更新" %>
<% end %>
