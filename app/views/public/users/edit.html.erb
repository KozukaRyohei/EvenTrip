<%= form_with(model: @user, url: user_path(@user), html: { class: "form" }) do |f| %>
  <div class="form-group">
    <%= f.label :ユーザー名 %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :ユーザー画像 %>
    <%= f.file_field :user_image, class: "form-control-file" %>
  </div>

  <%= f.submit "更新", class: "btn btn-primary" %>

  <div class="text-center">
    <%= link_to "退会する", withdrawal_user_path, class: "btn btn-danger",data: { confirm: '本当に退会しますか？' } %>
  </div>
<% end %>
