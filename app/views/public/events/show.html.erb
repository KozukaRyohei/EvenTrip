<div class="container">
  <h1 class="mb-4">イベント詳細</h1>

  <!-- イベント編集ボタン -->
  <div class="text-right">
    <%= link_to 'イベントを編集', edit_event_path(@event), class: "btn btn-primary" %>
  </div>

  <div class="row">
    <div class="col-md-6">
      <h2>イベント名</h2>
      <p><%= @event.name %></p>
      <h2>開催日時</h2>
      <p><%= @event.hold_date %></p>
      <h2>開催場所</h2>
      <p><%= @event.hold_place %></p>
    </div>

    <div class="col-md-6">
      <%= image_tag @event.get_event_image(500, 500), class: "img-thumbnail mx-auto d-block" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= link_to 'このイベントの記録を行う', new_event_post_path(@event.id), method: :get, class: "btn btn-primary text-light" %>
    </div>
  </div>
</div>
