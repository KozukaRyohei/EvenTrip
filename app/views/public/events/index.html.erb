<% if @events.any? %>
  <h2>イベント一覧</h2>
  <ul>
    <% @events.each do |event| %>
      <li><%= link_to event.name, event_path(event) %></li>
      <div><%= event.hold_date %></div>
      <div>開催場所:<%= event.hold_place %></div>
      <div><%= image_tag event.get_event_image(200,200) %></div>
    <% end %>
  </ul>
<% else %>
  <p>該当するイベントはありません。</p>
<% end %>