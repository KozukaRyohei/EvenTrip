<%= render 'layouts/errors', obj: @event %>

<h1 class="mb-4">イベントを編集</h1>

<%= form_for @event, html: { class: 'form' } do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'font-weight-bold' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :hold_date, class: 'font-weight-bold' %>
  <%= f.date_field :hold_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :hold_place, class: 'font-weight-bold' %>
    <%= f.text_field :hold_place, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :event_image, class: 'font-weight-bold' %>
    <%= f.file_field :event_image, class: 'form-control' %>
  </div>

  <div class="text-center">
    <%= f.submit '更新', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'イベント詳細に戻る', event_path(@event), class: 'btn btn-secondary' %>
