<% if post.favorited_by?(current_user) %>
  <%= link_to event_post_favorites_path(post.event_id,post.id), method: :delete, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= post.favorites.count %>
  <% end %>
<% else %>
  <%= link_to event_post_favorites_path(post.event_id,post.id), method: :post, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= post.favorites.count %>
  <% end %>
<% end %>