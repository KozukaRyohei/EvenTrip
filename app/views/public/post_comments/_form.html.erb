<% if comment.errors.any? %>
  <div class="alert alert-danger">
    <p><%= comment.errors.count %>件のエラーが発生しました</p>
    <ul>
      <% comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: comment, url: event_post_post_comments_path(post.event_id, post.id), method: :post, local: true) do |f| %>
  <div class="form-group">
    <%= f.text_area :comment, placeholder: "コメントをここに", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "送信", class: "btn btn-primary" %>
  </div>
<% end %>
